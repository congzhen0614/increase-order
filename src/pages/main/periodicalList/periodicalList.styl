.increase-order-periodical
  padding 0.2rem 0px
  padding-top 0.4rem
  > ul
    padding 0 0.2rem
    > li
      overflow hidden
      margin-bottom 0.32rem
      padding 0.4rem 0.2rem
      border 1px solid #F8BD48
      border-radius 0.2rem
      box-shadow 0px 4px 0px 0px rgba(248, 189, 72, 1)
      .list-img
        float left
        width 2rem
        height 2rem
        margin-right 0.2rem
        > img
          display block
          height 100%
          margin 0 auto
      .list-content
        .list-title
          font-size 0.32rem
          color #333333
          margin-bottom 0.1rem
        .list-describe
          color #9C9890
          font-size 0.24rem
          height 0.28rem
          line-height 0.28rem
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          > img
            display block
            width 0.28rem
            height 0.28rem
            float left
            margin-right 0.1rem
        .list-validity
          color #9C9890
          font-size 0.24rem
          margin-bottom 0.1rem
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
        .list-totle
          .list-number
            float right
            > img
              width 0.48rem
              height 0.48rem
            > span
              display inline-block
              width 0.6rem
              height 0.48rem
              line-height 0.48rem
              text-align center
              font-size 0.34rem
              color #523F1A
          .list-price
            font-size 0.24rem
            color #333333
            .big
              font-size 0.36rem
              vertical-align baseline
