.increase-order-book
  overflow hidden
  .book-seek
    padding 0.2rem
    display flex
    justify-content space-around
    > p:first-child
      padding-right 0.1rem
    > p:last-child
      padding-left 0.1rem
    > p
      position relative
      width 50%
      >span
        display block
        width 100%
        height 0.88rem
        line-height 0.88rem
        text-align center
        background-color #F5F5F5
        font-size 0.32rem
        color #333333
        padding-right 0.48rem
      > span:after
        content: ''
        position absolute
        right 0.8rem
        top 0.36rem
        display block
        width 0.24rem
        height 0.16rem
        background-image url("../../../assets/pull-down-logo.png")
        background-repeat no-repeat
        background-size 100%
  .list-left
    padding-right 0.1rem
  .list-right
    padding-left 0.1rem
  > ul
    float left
    width 50%
    padding 0.2rem
    > li
      overflow hidden
      padding 0.2rem
      box-shadow 0px 0px 5px 0px rgba(0, 0, 0, 0.15)
      margin-bottom 0.2rem
      .list-img
        width 100%
        > img
          width 100%
      .list-content
        .list-title
          font-size 0.34rem
          color #333333
          margin 0.2rem 0px
        .list-author
          font-size 0.2rem
          color #C7C7CC
          > span
            color #9C9890
            vertical-align baseline
            margin-left 0.2rem
        .list-pack
          font-size 0.2rem
          color #C7C7CC
          > span
            color #9C9890
            vertical-align baseline
            margin-left 0.2rem
        .list-price
          font-size 0.24rem
          color #888888
          margin 0.2rem 0px
          .big
            font-size 0.36rem
            color #333333
            vertical-align baseline
          .original-price
            font-size 0.26rem
            color #C7C7CC
            vertical-align baseline
            margin-left 0.1rem
            text-decoration line-through
        .list-number
          float right
          > img
            width 0.48rem
            height 0.48rem
          > span
            display inline-block
            height 0.48rem
            line-height 0.48rem
            width 0.6rem
            text-align center
            font-size 0.34rem
            color #523F1A
