.solicit-subscription-book
  .book-seek
    display flex
    justify-content space-around
    p
      display block
      width 50%
      text-align center
      height 0.88rem
      line-height 0.88rem
      background-color #F5F5F5
      > span
        display inline-block
        max-width 80%
        color #333333
        font-size 0.32rem
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
      > img
        width 0.24rem
        height 0.16rem
        margin-left 0.1rem
    > p:first-child
      margin-right 0.1rem
    > p:last-child
      margin-left 0.1rem
  .list-left
    padding-right 0.1rem
  .list-right
    padding-left 0.1rem
  > ul
    float left
    width 50%
    padding 0.2rem
    > li
      overflow hidden
      padding 0.2rem
      box-shadow 0px 0px 5px 0px rgba(0, 0, 0, 0.15)
      margin-bottom 0.2rem
      .list-img
        width 100%
        > img
          width 100%
      .list-content
        .list-title
          font-size 0.34rem
          color #333333
          margin 0.2rem 0px
        .list-author
          font-size 0.2rem
          color #C7C7CC
          > span
            color #9C9890
            vertical-align baseline
            margin-left 0.2rem
        .list-pack
          font-size 0.2rem
          color #C7C7CC
          > span
            color #9C9890
            vertical-align baseline
            margin-left 0.2rem
        .list-price
          font-size 0.24rem
          color #888888
          margin 0.2rem 0px
          .big
            font-size 0.36rem
            color #333333
            vertical-align baseline
          .original-price
            font-size 0.26rem
            color #C7C7CC
            vertical-align baseline
            margin-left 0.1rem
            text-decoration line-through
        .list-number
          float right
          > img
            width 0.48rem
            height 0.48rem
          > span
            display inline-block
            height 0.48rem
            line-height 0.48rem
            width 0.6rem
            text-align center
            font-size 0.34rem
            color #523F1A
