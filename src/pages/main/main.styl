.solicit-subscription-main
  background-color #5FDEC2
  height 100%
  padding 0.2rem
  main
    padding 0.2rem
    background-color #fff
    border-radius 0.2rem
    box-shadow 5px 5px 0px 0px rgba(67, 172, 149, 1)
    .title
      font-size 0.32rem
      color #333
      font-weight 600
      text-align center
      margin-top 0.2rem
    .creator
      font-size 0.24rem
      color #868582
      text-align center
      margin-top 0.2rem
    .explain
      font-size 0.24rem
      color #868582
      text-align center
      margin-top 0.1rem
    > nav
      display flex
      justify-content center
      margin 0.4rem 0
      > span
        display block
        padding 0.28rem 0.64rem
        color #333333
        font-size 0.32rem
        background-color #5FDEC2
        border-radius 0.2rem
        box-shadow 0px 4px 0px 0px rgba(79, 180, 158, 1)
      > span:nth-child(2)
        margin 0 0.1rem
      .activity
        background-color #FFD03C
        box-shadow 0px 4px 0px 0px rgba(209, 168, 41, 1)
