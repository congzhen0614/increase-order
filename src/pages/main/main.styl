.increase-order-main
  background-color #5FDEC2
  padding 0 0.2rem
  margin-bottom 1rem
  .content
    padding-top 0.6rem
    padding-bottom 0.5rem
    .top-icon
      position absolute
      top 0.2rem
      left 50%
      width 3rem
      margin 0 auto
      margin-left -1.5rem
    section
      width 100%
      background-color #fff
      border-radius 0.2rem
      padding-top 1.16rem
      padding-bottom 0.6rem
      box-shadow 5px 5px 0px 0px rgba(67, 172, 149, 1)
      .about-us
        float right
        margin-top -0.76rem
        margin-right 0.2rem
        font-size 0.2rem
        color #BEBBB5
        > img
          width 0.2rem
          height 0.2rem
          vertical-align baseline
      .increase-order-title
        font-size 0.28rem
        color #333333
        text-align center
        margin-bottom 0.5rem
        padding 0 0.2rem
      .increase-order-menu
        padding 0 0.2rem
        margin-bottom 0.48rem
        display flex
        justify-content center
        > span
          display block
          width 2.1rem
          height 0.88rem
          font-size 0.32rem
          color #333333
          background-color #5FDEC2
          border-radius 0.2rem
          text-align center
          line-height 0.88rem
          margin-right 0.2rem
          box-shadow 0px 4px 0px 0px rgba(79,180,158,1)
        > span:last-child
          margin-right 0px
        .active
          background-color #FFD03C
          box-shadow 0px 4px 0px 0px rgba(209,168,41,1)
      .no-more
        font-size 0.24rem
        color #9C9890
        text-align center
        height 0.64rem
        line-height 0.64rem
        margin-top 0.6rem
  .to-top
    position fixed
    display block
    width 1rem
    height 1rem
    right 0.4rem
    bottom 4rem
    z-index 1
  .contact-service
    position fixed
    display block
    width 1rem
    height 1rem
    right 0.4rem
    bottom 2.4rem
    z-index 1

