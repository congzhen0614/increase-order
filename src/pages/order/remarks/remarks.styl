.order-remarks
  padding 0.6rem 0.3rem
  .textarea
    position relative
    border 1px dashed #C7C7CC
    border-radius 0.2rem
    height 5.7rem
    padding 0.3rem
    > textarea
      outline none
      resize none
      width 100%
      height 4rem
      font-size 0.34rem
      color #333333
      line-height 0.5rem
      border none
    > textarea::placeholder
      color #C6C6C6
    .words-number
      position absolute
      bottom 0.3rem
      left 0.3rem
      font-size 0.33rem
      color #333333
      .exceed
        color #FF6060
    .remarks-submit
      position absolute
      bottom 0.3rem
      right 0.3rem
      display block
      width 1.54rem
      height 0.8rem
      line-height 0.8rem
      text-align center
      border-radius 0.1rem
      font-size 0.32rem
      color #ffffff
      background-color #F8BD48
