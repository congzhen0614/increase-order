.order-list
  background-color #F0F0F0
  padding-top 0.1rem
  padding-bottom 1.2rem
  .order-address
    margin-bottom 0.1rem
    .order-address-bg
      height 0.1rem
      background-color #FFFDE0
      background-image url("../../assets/address-border.png")
      background-repeat repeat-x
      background-size 1rem 0.1rem
    .order-address-content
      display table
      width 100%
      background-color #FFFDE0
      .content-left
        display table-cell
        padding 0.3rem
        padding-right 0px
        > span
          font-size 0.34rem
          color #525042
        .address-phone
          float right
        .address-content
          margin-top 0.1rem
          font-size 0.26rem
          line-height 0.34rem
          color #84836D
        .no-address
          font-size 0.3rem
          color #84836D
      .content-right
        display table-cell
        width 0.8rem
        > img
          display block
          margin 0 auto
          width 0.16rem
          height 0.26rem
  .order-shop
    .shop-list
      .list-head
        padding 0 0.3rem
        height 0.88rem
        line-height 0.88rem
        font-size 0.3rem
        color #333333
        background-color #F8F7F6
      > ul
        background-color #ffffff
        padding-left 0.3rem
        > li
          border-bottom 1px solid #E6E6E6
          padding 0.3rem
          overflow hidden
          padding-left 0px
          .list-left
            float left
            width 1.6rem
            height 1.6rem
            border 1px solid #D6D6D6
            border-radius 0.2rem
            margin-right 0.2rem
            overflow hidden
            > img
              display block
              height 100%
              margin 0 auto
          .list-right
            width 100%
            .title
              margin-bottom 0.2rem
              font-size 0.3rem
              font-weight 600
              color #333333
              text-overflow ellipsis
              white-space nowrap
              overflow hidden
            .price
              font-size 0.2rem
              color #F8BD48
              .big
                font-size 0.34rem
                vertical-align baseline
            .quantity
              display block
              height 0.4rem
              line-height 0.4rem
              padding 0 0.2rem
              background-color #F8BD48
              border-radius 0.4rem
              font-size 0.28rem
              color #ffffff
              float right
        > li:last-child
          border none
  .order-message
    background-color #ffffff
    margin-top 0.1rem
    font-size 0.3rem
    padding 0.3rem
    overflow hidden
    > img
      width 0.16rem
      height 0.26rem
      margin-left 0.3rem
      margin-top 0.1rem
      float right
    > input
      background-color #ffffff
      display block
      width 70%
      float right
      font-size 0.3rem
      color #C7C7CC
      text-align right
      text-overflow ellipsis
      white-space nowrap
      overflow hidden
    > p
      color #523F1A
  .order-price
    padding 0.3rem
    margin-top 0.1rem
    background-color #ffffff
    > div
      padding  0.1rem 0
      font-size 0.3rem
      color #9A968D
      > p
        font-size 0.2rem
        color #6E5627
        float right
        .big
          font-size 0.34rem
          vertical-align baseline
  .order-footer
    position fixed
    height 1rem
    width 100%
    bottom 0
    left 0
    background-color #ffffff
    box-shadow 0px -2px 5px 0px rgba(0, 0, 0, 0.1)
    .order-submit
      float right
      display block
      width 2.5rem
      height 1rem
      line-height 1rem
      text-align center
      font-size 0.34rem
      color #FFFFFF
      background linear-gradient(-135deg, rgba(254, 122, 86, 1), rgba(255, 80, 80, 1))
    > p
      font-size 0.2rem
      color #F8BD48
      margin-top 0.2rem
      margin-left 0.3rem
      > span:first-child
        color #6E5627
        vertical-align baseline
      .big
        font-size 0.48rem
        vertical-align baseline

