.home-address
  padding-bottom 1rem
  .no-address-list
    padding-top 4rem
    > img
      display block
      width 2rem
      height 2rem
      margin 0 auto
    > p
      font-size 0.3rem
      color #D6D6D6
      margin-top 0.3rem
      text-align center
  .address-list
    padding 0.4rem
    > li
      width 100%
      height 2rem
      background #fffde0
      margin-bottom 0.4rem
      background-image url('../../../assets/left_top_bg.png'), url('../../../assets/right_top_bg.png'), url('../../../assets/left_bottom_bg.png'), url('../../../assets/right_bottom_bg.png'), url('../../../assets/horizontal_bg.png'), url('../../../assets/horizontal_bg.png'), url('../../../assets/vertical_bg.png'), url('../../../assets/vertical_bg.png')
      background-position 0 0, 100% 0, 0 100%, 100% 100%, 0.52rem 0, 0.52rem 100%, 0 0.54rem, 100% 0.54rem
      background-repeat no-repeat, no-repeat, no-repeat, no-repeat, repeat-x, repeat-x, repeat-y, repeat-y
      background-size 0.52rem 0.52rem, 0.46rem 0.53rem, 0.52rem 0.44rem, 0.46rem 0.44rem, 1.04rem 0.14rem, 1.04rem 0.14rem, 0.12rem 1.03rem, 0.12rem 1.03rem
      .address-list-left
        width 90%
        padding 0.4rem
        padding-right 0
        .address-info
          > span
            font-size 0.3rem
            color #525042
          .address-phone
            float right
        .address-content
          font-size 0.28rem
          color #84836D
      .address-list-right
        float right
        width 10%
        > img
          width 0.16rem
          height 0.26rem
          margin-top 0.8rem
          margin-left 0.2rem
  .add-adress
    position fixed
    left 0
    bottom 0
    height 1rem
    color #F8BD48
    font-size 0.32rem
    width 100%
    text-align center
    line-height 1rem
    color #523F1A
    background-color #F8BD48
