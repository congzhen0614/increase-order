.add-child-address
  margin-bottom 1rem
  .item-list
    position relative
    clear both
    height 1.08rem
    line-height 1.08rem
    padding 0 0.3rem
    border-bottom 1px solid #E6E6E6
    .checked
      width 0.44rem
      height 0.44rem
      margin-left 0.3rem
    .link-icon
      position absolute
      right 0.3rem
      top 50%
      margin-top -0.13rem
      width 0.16rem
      height 0.26rem
    .item-title
      font-size 0.3rem
      color #333333
    .item-content
      float right
      width 60%
      height 1.08rem
      line-height 1.08rem
      text-align right
      font-size 0.3rem
      color #C7C7CC
      > div:first-child
        text-align left
      > div
        width 50%
        float left
        > img
          width 0.44rem
          height 0.44rem
          margin-right 0.2rem
    > input
      outline none
      background-color #ffffff
      border-bottom 1px solid #E6E6E6
    > input::-webkit-input-placeholder
      color #C7C7CC
    > span.item-content
      margin-right 0.5rem
  .submit
    position fixed
    bottom 0
    left 0
    width 100%
    height 1rem
    line-height 1rem
    text-align center
    color #ffffff
    font-size 0.32rem
    background-color #F8BD48
