.user-register
  padding 1rem 0.4rem
  .item-list
    width 100%
    height 1rem
    line-height 1rem
    border-bottom 1px solid #D6D6D6
    > input
      outline none
      font-size 0.3rem
    > input::-webkit-input-placeholder
      color #C7C7CC
    .close-icon
      width 0.32rem
      height 0.32rem
    .phone-icon
      width 0.26rem
      height 0.4rem
      margin-right 0.3rem
    .security-icon
      width 0.3rem
      height 0.32rem
      margin-right 0.3rem
    .password-icon
      width 0.26rem
      height 0.38rem
      margin-right 0.3rem
  .mobile
    position relative
    .close-icon
      position absolute
      right 0
      top 50%
      margin-top -0.16rem
  .code
    position relative
    .code-button
      display block
      height 0.6rem
      color #787570
      padding 0 0.2rem
      font-size 0.28rem
      line-height 0.6rem
      border-radius 0.6rem
      background-color #F3F4F5
      position absolute
      right 0
      top 50%
      margin-top -0.3rem
    .getcode-color
      color #ffffff
      background-color #FF6060
  .password
    position relative
    .close-icon
      position absolute
      right 0.6rem
      top 50%
      margin-top -0.16rem
    .eye-icon
      width 0.36rem
      height 0.36rem
      position absolute
      right 0
      top 50%
      margin-top -0.18rem
  .check-protocol
    margin-top 0.34rem
    height 1rem
    line-height 1rem
    .check-icon
      width 0.32rem
      height 0.32rem
      margin-right 0.2rem
    > span
      font-size 0.28rem
      color #C7C7CC
  .submit-button
    width 100%
    height 1rem
    color #ffffff
    font-size 0.34rem
    line-height 1rem
    text-align center
    border-radius 1rem
    margin-top 0.34rem
    background-color #FFEAC1
  .submit-background
    background-color #F8BD48
