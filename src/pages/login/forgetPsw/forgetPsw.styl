.forget-password-page
  padding 0 0.4rem
  padding-top 1.2rem
  > div
    > input
      outline none
      font-size 0.3rem
      color #C7C7CC
    > input::-webkit-input-placeholder
      color #C7C7CC
  .mobile-number
    position relative
    height 1rem
    width 100%
    line-height 1rem
    border-bottom 1px solid #D6D6D6
    .phone-icon
      width 0.26rem
      height 0.4rem
      margin-right 0.3rem
    .close-icon
      position absolute
      right 0
      top 50%
      width 0.32rem
      height 0.32rem
      margin-top -0.16rem
  .security-code
    position relative
    height 1rem
    width 100%
    line-height 1rem
    border-bottom 1px solid #D6D6D6
    .security-icon
      width 0.3rem
      height 0.34rem
      margin-right 0.3rem
    .get-code
      position absolute
      right 0
      top 50%
      display block
      height 0.6rem
      line-height 0.6rem
      padding 0 0.2rem
      font-size 0.28rem
      color #C6C6C6
      background-color #F0F0F0
      border-radius 0.6rem
      margin-top -0.3rem
    .getcode-color
      color #ffffff
      background-color #FF6060
  .onSubmit
    width 100%
    height 1rem
    line-height 1rem
    text-align center
    font-size 0.34rem
    color #FFFFFF
    background-color #FFEAC1
    margin-top 1rem
    border-radius 1rem
  .submit-background
    background-color #F8BD48
