.solicit-subscription-login
  height 100%
  overflow hidden
  .back
    height 100%
    overflow hidden
    .back-top
      height 5rem
      overflow hidden
      .back-top-right
        float right
        width 33.33%
        height 5rem
        overflow hidden
        > div
          width 100%
          height 2.5rem
          overflow hidden
          > img
            width 100%
      .back-top-left
        float left
        width 66.66%
        height 5rem
        overflow hidden
        > img
          width 100%
          height 100%
    .back-middle
      overflow hidden
      .back-middle-right
        float right
        width 66.66%
        height 5rem
        overflow hidden
        .back-middle-right-top
          width 100%
          height 2.5rem
          overflow hidden
          > img
            width 100%
        .back-middle-right-bottom
          width 100%
          height 2.5rem
          overflow hidden
          > div
            width 50%
            height 2.5rem
            float left
            > img
              width 100%
      .back-middle-left
        width 33.33%
        height 5rem
        float left
        overflow hidden
        > img
          height 100%
    .back-bottom
      width 100%
      overflow hidden
      > img
        width 100%
  .login-button
    position fixed
    left 0
    top 0
    width 100%
    height 100%
    z-index 999
    background-color rgba(0, 0, 0, 0.5)
    > span
      display block
      width 6.7rem
      height 1.2rem
      border 2px solid #ffffff
      border-radius 1.2rem
      font-size 0.36rem
      color #503F1D
      text-align center
      line-height 1.2rem
      margin 0 auto
    .phone-login
      margin-top 4rem
      background-color #F8BD48
    .weixin-login
      margin-top 0.6rem
      background-color #5FDEC2
    > img
      display block
      width 0.8rem
      height 0.8rem
      position absolute
      bottom 0.8rem
      left 50%
      margin-left -0.4rem
