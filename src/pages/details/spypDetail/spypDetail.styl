.spyp-detail
  height 100%
  padding 0.2rem
  background-color #5FDEC2
  .content
    min-height 100%
    border-radius 0.2rem
    background-color #ffffff
    box-shadow 5px 5px 0px 0px rgba(67, 172, 149, 1)
    .content-header
      background-color #FDF2DC
      padding 0.2rem
      padding-bottom 0.5rem
      border-radius 0.2rem 0.2rem 0px 0px
      .more-list
        display block
        width 0.96rem
        height 0.56rem
        color #ffffff
        font-size 0.28rem
        text-align center
        line-height 0.56rem
        border-radius 0.56rem
        background-color #5FDEC2
      .shoppingcar
        width 0.64rem
        height: 0.64rem
        border-radius 50%
        background-color #5FDEC2
        float right
        position relative
        .shopping-car-quantity
          display inline-block
          height 0.26rem
          line-height 0.2rem
          font-size 0.2rem
          padding 0 0.1rem
          background-color #FF6060
          color #ffffff
          border-radius 0.26rem
          position absolute
          top 0
          right -0.13rem
          z-index 999
          margin-top -0.09rem
          border 1px solid #FDF2DC
        > img
          width 0.32rem
          height 0.32rem
          position absolute
          top 50%
          left 50%
          margin-top -0.16rem
          margin-left -0.16rem
      .header-content
        position relative
        margin-top 0.5rem
        overflow hidden
        .header-left
          position absolute
          left 0
          top 0
          width 1.6rem
          height 1.6rem
          border-radius 0.2rem
          margin-right 0.2rem
          overflow hidden
          > img
            display block
            height 100%
            margin 0 auto
        .header-right
          margin-left 1.8rem
          .header-title
            font-size 0.32rem
            color #333333
            font-weight 600
            margin-bottom 5px
            overflow hidden
            display -webkit-box
            -webkit-line-clamp 2
            text-overflow ellipsis
            -webkit-box-orient vertical
          .header-brief
            font-size 0.24rem
            color #9C9890
            text-overflow ellipsis
            white-space nowrap
            overflow hidden
            margin-bottom 5px
          .header-price
            font-size 0.24rem
            color #888888
            float left
            .big
              color #333333
              font-size 0.36rem
              vertical-align baseline
          .album-number
            float left
            margin-top 2px
            > img
              width 0.36rem
              height 0.36rem
              margin-left 0.26rem
              margin-right 0.08rem
              vertical-align middle
            > span
              color #888888
              font-size 0.24rem
              display inline-block
              vertical-align middle
          .header-button
            clear both
            .buy-button
              color #ffffff
              background-color #F8BD48
            > span
              float left
              display block
              font-size 0.28rem
              height 0.64rem
              padding 0 0.25rem
              border-radius 0.64rem
              line-height 0.64rem
              background-color #ffffff
              margin-top 0.3rem
              margin-right 5px
    .spyp-list
      position relative
      padding 0.4rem 0.2rem
      .spyp-list-left
        position absolute
        overflow hidden
        left 0.2rem
        top 0.4rem
        width 1.6rem
        height 1.6rem
        border-radius 0.2rem
        .logo-icon
          display block
          height 100%
          margin 0 auto
          border-radius 0.2rem
        .audio-icon
          display block
          position absolute
          bottom 4px
          right 4px
          width 0.4rem
          height 0.4rem
        .video-icon
          display block
          position absolute
          bottom 4px
          right 4px
          width 0.4rem
          height 0.4rem
      .spyp-list-right
        overflow hidden
        margin-left 1.8rem
      .spyp-list-title
        font-size 0.32rem
        color #333333
        font-weight 600
        margin-bottom 5px
        overflow hidden
        display -webkit-box
        -webkit-line-clamp 2
        text-overflow ellipsis
        -webkit-box-orient vertical
      .spyp-list-brief
        font-size 0.24rem
        color #9C9890
        text-overflow ellipsis
        white-space nowrap
        overflow hidden
        margin-bottom 5px
      .spyp-list-price
        float left
        font-size 0.24rem
        color #888888
        .big
          font-size 0.36rem
          color #333333
          vertical-align baseline
      .album-number
        float left
        margin-top 2px
        > img
          width 0.36rem
          height 0.36rem
          margin-left 0.26rem
          margin-right 0.08rem
          vertical-align middle
        > span
          color #888888
          font-size 0.24rem
          display inline-block
          vertical-align middle
      .chapter
        clear both
        display block
        height 0.64rem
        line-height 0.64rem
        font-size 0.3rem
        padding 0 0.3rem
        border-radius 0.64rem
        float right
        color #55555
        background-color #F3F4F5
      .play-icons
        display block
        width 0.44rem
        height 0.44rem
        margin-top 0.15rem
  .to-top
    position fixed
    display block
    width 1rem
    height 1rem
    right 0.4rem
    bottom 2.4rem
    z-index 1
  .contact-service
    position fixed
    display block
    width 1rem
    height 1rem
    right 0.4rem
    bottom 2.4rem
    z-index 1
