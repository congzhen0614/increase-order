.spyp-album
  .spyp-album-header
    position relative
    padding 0.4rem 0.2rem
    background-color #FDF2DC
    .header-left
      position absolute
      top 0.4rem
      left 0.2rem
      width 1.6rem
      height 1.6rem
      border-radius 0.2rem
      overflow hidden
      .logo-icon
        display block
        height 100%
        margin 0 auto
      .play-type-icon
        display block
        position absolute
        right 4px
        bottom 4px
        width 0.4rem
        height 0.4rem
    .header-right
      margin-left 1.8rem
      .spyp-list-title
        font-size 0.32rem
        color #333333
        font-weight 600
        margin-bottom 5px
        overflow hidden
        display -webkit-box
        -webkit-line-clamp 2
        text-overflow ellipsis
        -webkit-box-orient vertical
      .spyp-list-brief
        font-size 0.24rem
        color #9C9890
        text-overflow ellipsis
        white-space nowrap
        overflow hidden
        margin-bottom 5px
      .spyp-list-price
        font-size 0.24rem
        color #888888
        .big
          font-size 0.36rem
          color #333333
          vertical-align baseline
  .album-list
    clear both
    height 1.2rem
    .serial
      display block
      width 1.2rem
      height 1.2rem
      line-height 1.2rem
      text-align center
      font-size 0.3rem
      color #BEBBB5
      float left
    .try-play
      float left
      padding 0.4rem 0
      margin-right 0.2rem
      > img
        width 0.4rem
        height 0.4rem
        margin-right 0.1rem
      > span
        display inline-block
        height 0.4rem
        line-height 0.4rem
        padding 0 0.1rem
        background-color #F8F7F6
        border-radius 0.4rem
        color #FF6060
        font-size 0.28rem
    .title
      height 1.2rem
      display flex
      align-items center
      > p
        font-size 0.32rem
        color #333333
        line-height 0.4rem
        font-weight 600
        overflow hidden
        text-overflow ellipsis
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical
