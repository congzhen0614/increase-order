.maga-detail
  background-color #F6F6F6
  .periodical-head
    background-color #ffffff
    padding 0 0.2rem
    padding-bottom 0.3rem
    .periodical-title
      padding-top 0.2rem
      color #333333
      font-size 0.3rem
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
    .periodical-prese
      font-size 0.28rem
      color #999999
      margin 0.1rem 0
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
    .periodical-suitable
      font-size 0.24rem
      color #F8BD48
      overflow hidden
      margin-bottom 0.1rem
      > span
        display block
        float left
        height 0.3rem
        line-height 0.3rem
        padding-right 0.2rem
      .age
        padding-right 0rem
        padding-left 0.2rem
        border-left 2px solid #BEBBB5
    .transport-costs
      clear both
      font-size 0.24rem
      color #999999
      > span
        color #333333
        vertical-align baseline
        margin-left 0.1rem
    .shoppingCar-quantity
      float right
      margin-top 0.05rem
      > img
        width 0.48rem
        height 0.48rem
      > span
        display inline-block
        width 0.96rem
        height 0.48rem
        text-align center
        line-height 0.48rem
        font-size 0.34rem
        color #523F1A
    .detail-price
      font-size 0.24rem
      margin-bottom 0.1rem
      .price-red
        color #FF6060
        .big
          font-size 0.4rem
          vertical-align baseline
      .price-black
        margin-left 0.1rem
        color #999999
  .periodical-inform
    padding 0.2rem 0.3rem
    background-color #ffffff
    .periodical-inform-images
      width 100%
  .periodical-content
    margin-top 0.2rem
    background-color #ffffff
    padding 0.2rem
    margin-bottom 1.5rem
    img
      width 100%
  .periodical-publ
    height 0.88rem
    line-height 0.88rem
    margin-top 0.2rem
    background-color #ffffff
    padding 0 0.2rem
    > img
      width 0.16rem
      height 0.26rem
      float right
      margin-top 0.3rem
    > p
      font-size 0.3rem
      color #333333
      font-weight 500
      text-overflow ellipsis
      white-space nowrap
      overflow hidden
  .hasGift
    border-bottom 1px solid #E6E6E6
  .periodical-gift
    height 0.88rem
    line-height 0.88rem
    background-color #ffffff
    padding 0 0.2rem
    > img
      width 0.16rem
      height 0.26rem
      float right
      margin-top 0.3rem
    > p
      font-size 0.3rem
      color #333333
      font-weight 500
      text-overflow ellipsis
      white-space nowrap
      overflow hidden
