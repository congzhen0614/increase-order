.maga-detail-press
  padding 0.6rem 0.3rem
  .press-title
    font-size 0.3rem
    color #999999
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  .press-content
    font-size 0.3rem
    padding 0.3rem 0
    overflow hidden
    > span
      display block
      color #999999
      width 20%
      float left
    > p
      color #333333
      text-align right
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
