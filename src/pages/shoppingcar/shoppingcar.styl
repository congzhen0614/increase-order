.solicit-subscription-shoppingcar
  margin-bottom 2rem
  .shoppingcar-null
    padding-top 3rem
    > img
      display block
      width 2.8rem
      height 2.64rem
      margin 0 auto
  .maga-book-spyp
    header
      width 100%
      padding 0.22rem 0.24rem
      background-color #FBFAF9
      > img
        display block
        width 0.44rem
        height 0.44rem
        float left
        margin-right 0.24rem
      > span
        font-size 0.3rem
        color #333333
    > ul
      > li
        padding-top 0.3rem
        height 2.2rem
        .select
          position relative
          width 0.92rem
          height 1.6rem
          float left
          > img
            position absolute
            left 50%
            top 50%
            margin-left -0.22rem
            margin-top -0.22rem
            width 0.44rem
            height 0.44rem
        .info
          overflow hidden
          padding-right 0.3rem
          padding-bottom 0.3rem
          border-bottom 1px solid #f5f5f5
          .surface
            float left
            width 1.6rem
            height 1.6rem
            border 1px solid #f5f5f5
            border-radius 0.1rem
            margin-right 0.2rem
            > img
              display block
              height 100%
              margin 0 auto
          .content
            .title
              text-align justify
              font-size 0.3rem
              color #333333
              font-weight 500
              overflow hidden
              text-overflow ellipsis
              display -webkit-box
              -webkit-box-orient vertical
              -webkit-line-clamp 2
              margin-bottom 0.24rem
            .quantity
              float right
              > img
                display block
                float left
                width 0.48rem
                height 0.48rem
              > span
                display block
                float left
                width 0.96rem
                height 0.48rem
                text-align center
                line-height 0.48rem
                font-size 0.34rem
                color #523F1A
            .price
              font-size 0.2rem
              color #F8BD48
              .big
                font-size 0.34rem
                vertical-align baseline
      .lastChild
        .info
          border none
  .shoppingcar
    position fixed
    left 0
    bottom 1rem
    width 100%
    height 1rem
    background-color #fff
    box-shadow 0px -2px 5px 0px rgba(0, 0, 0, 0.1)
    .settle
      display block
      width 2.5rem
      height 1rem
      background linear-gradient(-135deg, rgba(254, 122, 86, 1), rgba(255, 80, 80, 1))
      font-size 0.34rem
      color #ffffff
      line-height 1rem
      text-align center
      float right
    .checked-all
      padding 0.28rem 0
      padding-left 0.3rem
      > img
        width 0.44rem
        height 0.44rem
        margin-right 0.2rem
      > span
        font-size 0.3rem
        color #3333333
    .accounts
      float right
      padding 0.2rem 0
      padding-right 0.3rem
      > p
        color #523F1A
        font-size 0.2rem
        .big
          font-size 0.4rem
          vertical-align baseline
