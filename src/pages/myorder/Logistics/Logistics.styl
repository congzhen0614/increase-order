.order-Logistics
  .order-Logistics-head
    padding 0.3rem
    border-bottom 1px solid #D6D6D6
    > p
      height 0.5rem
      line-height 0.5rem
      > span
        font-size 0.3rem
        color #302D28
      > span:first-child
        color #C7C7CC
        margin-right 0.2rem
      > img
        width 0.6rem
        height 0.6rem
        float right
  .order-Logistics-info
    padding 0.4rem 0.3rem
    > ul
      > li:first-child
        .flow-icon
          > img
            position absolute
            top 50%
            left 50%
            width 0.3rem
            height 0.3rem
            margin-top -0.15rem
            margin-left -0.15rem
        .flow-info
          color #F8BD48
      > li
        display flex
        padding 0.4rem 0
        justify-content space-between
        .flow-icon
          position relative
          width 0.6rem
          height 0.5rem
          > img
            position absolute
            top 50%
            left 50%
            width 0.14rem
            height 0.14rem
            margin-top -0.07rem
            margin-left -0.07rem
        .flow-info
          width 100%
          color #C7C7CC
          > p:first-child
            line-height 0.5rem
            font-size 0.3rem
          > p:last-child
            line-height 0.26rem
            margin-top 0.2rem
            font-size 0.26rem
          .yin
            visibility hidden

