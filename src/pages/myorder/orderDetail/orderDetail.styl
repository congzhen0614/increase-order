.order-detail
  .detail-finish
    background-image url("../../../assets/order/finish-icon.png")
    background-repeat no-repeat
    background-size 1.4rem 1.2rem
    background-position 95% 0
  .detail-header
    padding 0.2rem
    overflow hidden
    background-color #FFF9AB
    .detail-status
      display block
      height 0.4rem
      padding 0 0.2rem
      border-radius 5px
      line-height 0.4rem
      font-size 0.24rem
      color #523F1A
      border 1px solid #523F1A
      float right
    > p
      color #8D8850
      font-size 0.26rem
      margin-bottom 0.1rem
      .yin
        visibility hidden
      > span
        color #523F1A
        vertical-align baseline
    .detail-button
      display block
      height 0.6rem
      line-height 0.6rem
      color #ffffff
      font-size 0.3rem
      float right
      padding 0 0.26rem
      margin-left 0.2rem
      border-radius 5px
    .pay-button
      background-color #78C61A
    .cancel-button
      background-color #FF6060
  .detail-address:last-child
    border none
  .detail-address
    display table
    width 100%
    border-bottom 1px solid #F3F4F5
    .address-left
      position relative
      display table-cell
      width 1.16rem
      > img
        position absolute
        top 50%
        left 50%
        width 0.36rem
        height 0.44rem
        margin-top -0.18rem
        margin-left -0.22rem
    .address-right
      display table-cell
      padding 0.15rem 0.3rem
      padding-left 0
      > p:first-child
        margin-bottom 0.1rem
      > p
        color #2F2D28
        font-size 0.3rem
        > span
          color #302D28
        .address-phone
          float right
  .leave-massage
    padding-top 0.1rem
    background-color #F3F4F6
    > p
      background-color #ffffff
      padding 0.3rem 0.2rem
      line-height 0.36rem
      font-size 0.26rem
      color #52504C
  .detail-list
    background-color #f3f4f5
    padding-top 0.1rem
    .detail-title
      padding 0 0.3rem
      font-size 0.3rem
      color #333333
      height 0.88rem
      line-height 0.88rem
      .refund-button
        display block
        height 0.6rem
        line-height 0.6rem
        font-size 0.32rem
        color #F8BD48
        padding 0 0.2rem
        border-radius 0.6rem
        border 1px solid #F8BD48
        margin-top 0.14rem
      > span
        font-size 0.3rem
        color #333333
        float right
        margin-left 0.2rem
    > ul
      padding-left 0.3rem
      background-color #ffffff
      .refunded-icon
        background-image url("../../../assets/order/refunded-icon.png")
        background-repeat no-repeat
        background-size 1.4rem 1.4rem
        background-position 95% 0
      > li:last-child
        border none
      > li
        position relative
        padding 0.3rem
        padding-left 0
        overflow hidden
        border-bottom 1px solid #F3F4F5
        .detail-left
          position absolute
          top 0.3rem
          left 0
          width 1.6rem
          height 1.6rem
          overflow hidden
          border-radius 5px
          margin-right 0.2rem
          border 1px solid #D6D6D6
          > img
            display block
            height 100%
            margin 0 auto
        .detail-right
          margin-left 1.8rem
          position relative
          min-height 1.6rem
          .detail-name
            font-size 0.3rem
            color #333333
            font-weight 600
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
          .detail-price
            margin 0.1rem 0
            font-size 0.2rem
            color #BEBBB5
            .big
              font-size 0.34rem
              vertical-align baseline
          .refuse-refund
            display inline-block
            height 0.6rem
            line-height 0.6rem
            padding 0 0.2rem
            background-color #F3F4F5
            border-radius 3px
            font-size 0.32rem
            color #BEBBB5
          .refunding-button
            display inline-block
            height 0.6rem
            line-height 0.6rem
            padding 0 0.2rem
            background-color #F3F4F5
            border-radius 3px
            font-size 0.32rem
            color #333333
            margin-right 0.2rem
          .cancel-refund
            display inline-block
            height 0.6rem
            line-height 0.6rem
            padding 0 0.2rem
            background-color #6CC826
            border-radius 3px
            font-size 0.32rem
            color #ffffff
          .detail-quantity
            background-color #F8BD48
            font-size 0.3rem
            color #ffffff
            display block
            height 0.4rem
            line-height 0.4rem
            padding 0 0.2rem
            border-radius 0.4rem
            position absolute
            right 0
            top 1.2rem
          .refund-content
            clear both
            margin-top 0.1rem
            color #9C9890
            font-size 0.26rem
            line-height 0.4rem
            > span:first-child
              display block
              float left
            > span:last-child
              display block
              margin-left 1.2rem
              .if-show
                float right
                display inline-block
                color #523F1A
                font-size 0.26rem
                text-decoration underline
                vertical-align baseline
                > img
                  width 0.2rem
                  height 0.12rem
            .no-refund
              color #302D28
