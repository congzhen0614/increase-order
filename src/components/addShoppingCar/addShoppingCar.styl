.add-shopping-car
  position fixed
  bottom 0
  left 0
  width 100%
  background-color #ffffff
  footer
    height 1rem
    box-shadow 0px -2px 5px 0px rgba(0, 0, 0, 0.1)
    .buy-now
      width 33%
      height 1rem
      background linear-gradient(-135deg, rgba(254, 122, 86, 1), rgba(255,80,80,1))
      color #ffffff
      font-size 0.34rem
      float right
      text-align center
      line-height 1rem
    .add-shoppingcar
      width 33%
      height 1rem
      color #ffffff
      font-size 0.34rem
      float right
      text-align center
      line-height 1rem
      background-color #F8BD48
    .footer-icon
      width 34%
      height 1rem
      padding 0 0.2rem
      > p
        width 50%
        float left
        > img
          display block
          width 0.4rem
          height 0.4rem
          margin 0 auto
          margin-top 0.15rem
        > span
          display block
          text-align center
          font-size 0.2rem
          color #C7C7CC
