.detail-footer
  box-shadow 0px -2px 5px 0px rgba(0, 0, 0, 0.1)
  background-color #ffffff
  position fixed
  height 1rem
  width 100%
  bottom 0
  left 0
  .buy-now
    display block
    width 33.33%
    height 1rem
    float right
    text-align center
    line-height 1rem
    color #ffffff
    font-size 0.34rem
    background linear-gradient(-135deg, rgba(254, 122, 86, 1),rgba(255, 80, 80, 1))
  .add-shoppingcar
    display block
    width 33.33%
    height 1rem
    float right
    text-align center
    line-height 1rem
    color #ffffff
    font-size 0.34rem
    background-color #F8BD48
  .shoppingcar-icon
    height 1rem
    width 33.33%
    > div
      position relative
      margin 0 auto
      height 0.4rem
      width 0.4rem
      margin-top 0.15rem
      > img
        display block
        height 100%
        width 100%
      > span
        display block
        position absolute
        top -0.12rem
        right -0.12rem
        min-width 0.24rem
        height 0.24rem
        line-height 0.28rem
        padding 0 2px
        background-color #F23030
        color #ffffff
        font-size 0.2rem
        border-radius 0.24rem
    > p
      text-align center
      font-size 0.2rem
      color #C7C7CC
      height 0.2rem
      line-height 0.2rem
      margin-top 0.1rem
