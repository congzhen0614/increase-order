.solicit-subscription-nav
  > nav
    position fixed
    width 100%
    height 1rem
    left 0
    bottom 0
    display flex
    justify-content space-around
    background rgba(255, 255, 255, 1)
    box-shadow 0px -2px 5px 0px rgba(0, 0, 0, 0.1)
    padding 0.1rem
    > a
      > img
        display block
        width 0.44rem
        height 0.44rem
        margin 0 auto
      > span
        font-size 0.24rem
        color #C7C7CC
      .activity
        color #655022
